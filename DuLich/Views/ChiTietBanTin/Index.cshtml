@using DuLich.Models.EF
@{
    ViewBag.Title = "Bản tin";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    var tin = (DuLich.Models.EF.BanTin)ViewBag.Tin;
    var diadiem = (List<DuLich.Models.EF.BanTin>)ViewBag.DD;
    var binhluan = (List<DuLich.Models.EF.BinhLuan>)ViewBag.BL;

}



<div class="page-title wb">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2><i class="fa fa-leaf bg-green"></i> Bài viết</h2>
            </div><!-- end col -->
            <div class="col-lg-4 col-md-4 col-sm-12 hidden-xs-down hidden-sm-down">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/DanhMucTin/Index/@tin.DanhMuc.IDDanhMuc">@tin.DanhMuc.TenDanhMuc</a></li>
                    <li class="breadcrumb-item active">@tin.TieuDe</li>
                </ol>
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end page-title -->

<section class="section wb">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">
                    <div class="blog-title-area">
                        <span class="color-green"><a href="/DanhMucTin/Index/@tin.IDDanhMuc" title="">@tin.ViTri</a></span>

                        <h3>@tin.TieuDe</h3>

                        <div class="blog-meta big-meta">
                            <small><a href="garden-single.html" title="">@tin.NgayDang</a></small>
                            <small><a href="blog-author.html" title="">Tác giả: @tin.Username</a></small>
                            <small><a href="#" title=""><i class="fa fa-eye"></i> @tin.SoLuotXem</a></small>
                        </div><!-- end meta -->

                        <div class="post-sharing">
                            <ul class="list-inline">
                                <li><a href="#" class="fb-button btn btn-primary"><i class="fa fa-facebook"></i> <span class="down-mobile">Share on Facebook</span></a></li>
                                <li><a href="#" class="tw-button btn btn-primary"><i class="fa fa-twitter"></i> <span class="down-mobile">Tweet on Twitter</span></a></li>
                                <li><a href="#" class="gp-button btn btn-primary"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div><!-- end post-sharing -->
                    </div><!-- end title -->
                    <div class="single-post-media">
                        <img src="/forest-time/upload/@tin.Anh.Anh1" alt="" class="img-fluid">
                    </div><!-- end media -->
                    <div class="blog-content">
                        <div class="pp">
                            <p>@tin.NoiDung.Doan1</p>
                            <p>@tin.NoiDung.Doan2</p>
                        </div><!-- end pp -->
                        <img src="/forest-time/upload/@tin.Anh.Anh2" alt="" class="img-fluid img-fullwidth">

                        <div class="pp">
                            <p>@tin.NoiDung.Doan3</p>

                            <p>@tin.NoiDung.Doan4</p>
                            <p>
                                <img src="/forest-time/upload/@tin.Anh.Anh3" class="float-left" width="340" alt="">
                                @tin.NoiDung.Doan5
                            </p>
                            <p>@tin.NoiDung.Doan6</p>
                        </div><!-- end pp -->
                    </div>

                    <!-- end content -->

                    <div class="blog-title-area">
                        <div class="tag-cloud-single">
                            <span>Tags</span>
                            @foreach (var dd in diadiem)
                            {
                                <small><a href="/DanhMucTin/Index/@dd.IDDanhMuc" title="">@dd.ViTri</a></small>
                            }

                        </div><!-- end meta -->

                        <div class="post-sharing">
                            <ul class="list-inline">
                                <li><a href="#" class="fb-button btn btn-primary"><i class="fa fa-facebook"></i> <span class="down-mobile">Chia sẻ lên Facebook</span></a></li>
                                <li><a href="#" class="tw-button btn btn-primary"><i class="fa fa-twitter"></i> <span class="down-mobile">Chia sẻ lên Twitter</span></a></li>
                                <li><a href="#" class="gp-button btn btn-primary"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div><!-- end post-sharing -->
                    </div><!-- end title -->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="banner-spot clearfix">
                                <div class="banner-img">
                                    <img src="/forest-time/upload/banner_01.jpg" alt="" class="img-fluid">
                                </div><!-- end banner-img -->
                            </div><!-- end banner -->
                        </div><!-- end col -->
                    </div><!-- end row -->

                    <hr class="invis1">


                    <div class="custombox clearfix">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="comments-list">
                                    @foreach (var bl in binhluan)
                                    {
                                        <div class="media">

                                            <div class="media-body">

                                                <h4 class="media-heading user_name">@bl.TenNguoiDung<small>2020-06-06</small></h4>

                                                <p>@bl.NoiDung</p>


                                            </div>
                                        </div>
                                    }


                                </div>
                            </div><!-- end col -->
                        </div><!-- end row -->
                    </div><!-- end custom-box -->

                    <hr class="invis1">

                    <div class="custombox clearfix">
                        <h4 class="small-title">Thêm bình luận</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                @{ Html.RenderAction("BinhLuan", "Home");}
                            </div>
                            @*<div class="col-lg-12">
                                    <form class="form-wrapper">
                                        <input type="text" class="form-control" placeholder="Your name">
                                        <input type="text" class="form-control" placeholder="Email address">
                                        <input type="text" class="form-control" placeholder="Website">
                                        <textarea class="form-control" placeholder="Your comment"></textarea>
                                        <button type="submit" class="btn btn-primary">Submit Comment</button>
                                    </form>
                                </div>*@
                        </div>
                    </div>
                </div><!-- end page-wrapper -->
            </div><!-- end col -->

            @{Html.RenderAction("TinHot", "Home");}<!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>

